{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2018", "es6"],
    "outDir": "./bin",
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./tests/**/*"]
}